@inject GameContent Content;

<canvas id="blazorGameGraphicsContext" @ref="Canvas" width="@Width" height="@Height"></canvas>

<CascadingValue Name="GraphicsHeight" Value="@Height">
    <CascadingValue Name="GraphicsWidth" Value="@Width">
        <CascadingValue Value="@Content">
            <CascadingValue Value="@Canvas">
                @ChildContent
            </CascadingValue>
        </CascadingValue>
    </CascadingValue>
</CascadingValue>

@code {
    [Parameter]
    public int Height { get; set; } = 240;

    [Parameter]
    public int Width { get; set; } = 320;

    [Parameter]
    public bool IsFullScreen { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    public ElementReference Canvas { get; set; }
}
